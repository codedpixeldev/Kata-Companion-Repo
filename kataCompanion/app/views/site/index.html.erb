<% if current_user %>
  <h2>Latest Katas</h2>
  <table style="width: 100%">
    <thead>
      <tr>
        <th>Kata Name</th>
      </tr>
    </thead>

    <tbody>
      <% @katas.each do |kata| %>
        <tr>
          <td data-no-turbolink><%= link_to kata.title, kata %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  
<% else %>
  <div class="panel">
    <h1>Share your Katas!</h1>
    <p>A simple app to help Shotokan Karate students practise kata.</p>
    <%= link_to "Get started today", new_user_registration_path, :class => "button button-large" %>
  </div>

  <hr>

  <div class="row">
