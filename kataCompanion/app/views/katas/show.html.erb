<p id="notice"><%= notice %></p>

<div class="row">
  <div class="columns">
  <strong>Kata Name:</strong>
  <%= @kata.title %>
  </div>
</div>
<hr>
<div class="row">
  <div class="columns">
	<div id="videoContainer" style="float: none;
		clear: both;
		width: 100%;
		position: relative;
		padding-bottom: 56.25%;
		padding-top: 25px;
		height: 0;">
	<div id="player" style="position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;"></div>
	</div>
  </div>
</div>
<hr>
<div class="row">
  <div class="columns" style="margin-left:20px">
  <strong>Instructions for <%= @kata.title %>:</strong>
  <ol style="margin-top:10px;">
  <%
    movements = @kata.movements.split("~")
	movementTimes = @kata.movement_links.split(",")
	movements.each_with_index do |movement, index| 
  %>
		<li><a id="btnSeek" data-seek="<%="#{movementTimes[index]}"%>" href="#"><%="#{movement}"%></a></li>
  <% 
	end
  %>
  </ol>

</div>
</div>

<%= javascript_tag do %>
  window.videoId = '<%= @kata.url %>';
<% end %>
<hr>
<div class="row">
	<div class="columns">
		<ul class="menu">
			<li><%= link_to 'Edit', edit_kata_path(@kata) %></li>
			<li><%= link_to 'Back', katas_path %></li>
		</ul>
	</div>
</div>